---
import { NUMBERS } from "@/consts/numbers";
import WaveIcon from "@/assets/icons/wave.svg";
---

<section id="numbers" class="bg-secondary-600 relative">
    <div class="max-w-4xl mx-auto py-40 px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
            {
                NUMBERS.map(({ number, title }) => (
                    <div class="flex flex-col items-center p-4 gap-2">
                        <span class="text-6xl md:text-7xl font-bold font-montserrat">
                            {number}+
                        </span>
                        <p class="text-center text-sm w-[200px] md:w-full">
                            {title}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
    <WaveIcon class="absolute h-40 w-full top-0 inset-x-0 rotate-180" />
<WaveIcon class="absolute h-40 w-full -bottom-1 inset-x-0" />
</section>