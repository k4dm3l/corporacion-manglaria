import NavHome from "./NavHome.astro";
---

<section id="home" class="min-h-screen w-full bg-[url('/images/hero2.webp')]">
    <NavHome />
    <div class="flex absolute top-0 left-0 px-4 flex-col items-center min-h-screen justify-center w-full h-full">
        <div class="relative z-10 max-w-2xl">
            <h1
                class="text-5xl sm:text-7xl text-secondary-600 mb-10 md:text-8xl font-montserrat font-bold text-center text-balance"
            >
                Corporaci√≥n Manglaria
            </h1>
            <p
                class="text-xl text-center text-balance text-white/60 leading-[180%]"
            >
                "Tejemos redes de esperanza en Buenaventura, transformando
